<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/sidebarBtnMaterial"
            android:layout_width="60dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="visible"
            app:mm_color="@color/colorPrimary"/>

        <clover_studio.com.supertaxi.view.CustomTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sidebarBtnMaterial"
            android:layout_toEndOf="@+id/sidebarBtnMaterial"
            android:layout_toLeftOf="@+id/ivAvatarInToolbar"
            android:layout_toStartOf="@+id/ivAvatarInToolbar"
            android:ellipsize="end"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_view_title_text_size"/>

        <clover_studio.com.supertaxi.view.roundimage.RoundImageView
            android:layout_width="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/ivAvatarInToolbar"
            android:background="@color/colorPrimary"
            android:layout_height="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devil_gray"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>
