<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <clover_studio.com.supertaxi.view.CustomTextView
            android:id="@+id/toolbarLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cancel"
            android:singleLine="true"
            android:textColor="@color/default_to_devil_gray"
            android:padding="10dp"
            android:textSize="@dimen/small_text_view_title_text_size"/>

        <clover_studio.com.supertaxi.view.CustomTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_view_title_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/devil_gray" />

    </RelativeLayout>

</RelativeLayout>
